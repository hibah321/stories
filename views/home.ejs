<!DOCTYPE html>
<html>

    <%- include('./partials/head.ejs')  %> 

<body>
    
    <%- include('./partials/nav.ejs')  %> 

    <div class="container">
        
        <% if (stories.length > 0) { %>
            <% stories.forEach((story) => { %>
      
              <h3><%= story.title %></h3>
              <p ><%= story.snippet %></p>
      
            <% }) %>
        <% } else { %>
            <p>There are no blogs to display...</p>
        <% } %>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>